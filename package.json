{
  "name": "slack-assistant",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk:bootstrap": "npx cdk bootstrap --all -c stage=${STAGE} -c version=${VERSION}",
    "cdk:deploy": "npx cdk deploy --all -c stage=${STAGE} -c version=${VERSION} --require-approval never --concurrency 100",
    "cdk:hotswap": "npx cdk deploy --all -c stage=${STAGE} -c version=${VERSION} --require-approval never --concurrency 100 --hotswap",
    "cdk:diff": "npx cdk diff --all -c stage=${STAGE} -c version=${VERSION}",
    "cdk:synth": "npx cdk synth --all -c stage=${STAGE} -c version=${VERSION}",
    "cdk:generate": "npx cdk synth --all -c stage=${STAGE} -c version=${VERSION} --no-path-metadata",
    "cdk:_destroy": "npx cdk destroy --all -c stage=${STAGE} -c version=${VERSION}",
    "deps:install": "npm i",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm i",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "aws-cdk": "^2.1100.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-cdk/aws-bedrock-agentcore-alpha": "^2.233.0-alpha.0",
    "@aws-cdk/aws-lambda-python-alpha": "^2.233.0-alpha.0",
    "aws-cdk-lib": "^2.233.0",
    "constructs": "^10.4.4",
    "dotenv": "^17.2.3",
    "source-map-support": "^0.5.21"
  }
}
